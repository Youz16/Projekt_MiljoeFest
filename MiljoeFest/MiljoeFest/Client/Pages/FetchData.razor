@page "/fetchdata"
@using MiljoeFest.Shared
@inject HttpClient Http

<PageTitle>Coordinators</PageTitle>

<h1>Coordinators</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Skills</th>
                <th>Birthday</th>
                <th>First aid</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserId</td>

                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Skills</td>
                    <td>@user.BirthDay</td>
                    <td>@user.FirstAid</td>
                    <td>
                        <button class="btn btn-danger" @onclick="delete">delete</button>
                        <button class="btn btn-warning" @onclick="create">create</button>
                        <button class="btn btn-dark" @onclick="update">update</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<User> users = new();

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetFromJsonAsync<List<User>>("userController/getUsers?role=1");
    }

    public async Task delete()
    {
        await Http.DeleteAsync("userController/delete?userId=3");
    }

    public async Task create()
    {
        DateTime n = new(2000, 5, 19);
        User frank = new(1, "mad", "frank", "mail", "205665886", "sej til at spise", n, false);

        await Http.PostAsJsonAsync<User>("userController/create", frank);
    }

    public async Task update()
    {
        DateTime n = new(2000, 5, 19);
        User p = new(1, "mad", "tina", "mail", "205665886", "sej til at spise", n, false);
        
        await Http.PutAsJsonAsync("userController/update?userId=2", p);
    }



}
